@{
    ViewData["Title"] = "Home Page";
}

<!-- .main-content -->
<div class="hero" data-bg-image='~/images/banner.png'>
    <div class="container">
        <form action="#" class="find-location">
            <input type="text" placeholder="Find your location...">
            <input type="submit" value="Find">
        </form>
    </div>
</div>

<div class="forecast-table">
    <div class="container">
        <div class="forecast-container">
            
            <div class="today forecast">
                <div class="forecast-header">
                    <div class="day">Monday</div>
                    <div class="date">6 Oct</div>
                </div> <!-- .forecast-header -->
                <div class="forecast-content">
                    <div class="location">@ViewData["City"]</div>
                    <div class="degree">
                        <div class="num">@ViewData["Day 1 Temp"]<sup>o</sup>C</div>
                        <div class="forecast-icon">
                            <img src="~/images/icons/icon-1.svg" alt="" width=90>
                        </div>	
                    </div>
                    <span><img src="~/images/icon-umberella.png" alt="">@ViewData["RainProbability"]</span>
                    <span><img src="~/images/icon-wind.png" alt="">@ViewData["WindSpeed"]</span>
                    <span><img src="~/images/icon-compass.png" alt="">@ViewData["WindDirection"]</span>
                </div>
            </div>


            <div class="today forecast">
                <div class="forecast-header">
                    <div class="day">Forecast details</div>
                </div> <!-- .forecast-header -->
            <table class="table table-striped"  style="color:white;">
                <tr>
                    <td>
                    <img src="~/images/icon-compass.png" alt="">                        
                    </td>  
                    <td>Humidity</td>
                    <td>@ViewData["Humidity"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/temperature.png" alt="">
                    </td>  
                    <td>Min Temperature</td>
                    <td>@ViewData["TempMin"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/temperature.png" alt="">  
                    </td>  
                    <td>Max Temperature</td>
                    <td>@ViewData["TempMax"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/weather-condition.png" alt="">  
                    </td>  
                    <td>Weather Condition</td>
                    <td>@ViewData["WeatherCondition"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/icon-compass.png" alt="">                        
                    </td>  
                    <td>Wind Direction</td>
                    <td>@ViewData["WindDirection"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/icon-wind.png" alt="">                        
                    </td>  
                    <td>Wind Speed</td>
                    <td>@ViewData["WindSpeed"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/icon-umberella.png" alt="">                        
                    </td> 
                    <td>Rain Probability</td>
                    <td>@ViewData["RainProbability"]</td>
                </tr>
                <tr>
                    <td>
                        <img src="~/images/sunrise-sunset.png" alt="">  
                    </td>  
                    <td>Sunrise/Sunset</td>
                    <td>@ViewData["Sunrise"] / @ViewData["Sunset"]</td>
                </tr>
            </table>
            </div>


            <div class="forecast">
                <div class="forecast-header">
                    <div class="day">Tuesday</div>
                </div> <!-- .forecast-header -->
                <div class="forecast-content">
                    <div class="forecast-icon">
                        <img src="~/images/icons/icon-3.svg" alt="" width=48>
                    </div>
                    <div class="degree">@ViewData["Day 2 Max Temp"]<sup>o</sup>C</div>
                    <small>@ViewData["Day 2 Min Temp"]<sup>o</sup></small>
                </div>
            </div>
            <div class="forecast">
                <div class="forecast-header">
                    <div class="day">Wednesday</div>
                </div> <!-- .forecast-header -->
                <div class="forecast-content">
                    <div class="forecast-icon">
                        <img src="~/images/icons/icon-5.svg" alt="" width=48>
                    </div>
                    <div class="degree">@ViewData["Day 3 Max Temp"]<sup>o</sup>C</div>
                    <small>@ViewData["Day 3 Min Temp"]<sup>o</sup></small>
                </div>
            </div>
        </div>
    </div>
</div>

<main class="main-content">
    <div class="fullwidth-block">
        <div class="container">
            <h2 class="section-title">Top searched cities</h2>
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="live-camera">
                        <figure class="live-camera-cover"><img src="~/images/live-camera-1.jpg" alt=""></figure>
                        <h3 class="location">Pretoria</h3>
                        <small class="date">8 oct, 8:00AM</small>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="live-camera">
                        <figure class="live-camera-cover"><img src="~/images/live-camera-2.jpg" alt=""></figure>
                        <h3 class="location">Cape Town</h3>
                        <small class="date">8 oct, 8:00AM</small>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="live-camera">
                        <figure class="live-camera-cover"><img src="~/images/live-camera-3.jpg" alt=""></figure>
                        <h3 class="location">Johanessburg</h3>
                        <small class="date">8 oct, 8:00AM</small>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6">
                    <div class="live-camera">
                        <figure class="live-camera-cover"><img src="~/images/live-camera-4.jpg" alt=""></figure>
                        <h3 class="location">Durban</h3>
                        <small class="date">8 oct, 8:00AM</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main> 